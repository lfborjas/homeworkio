<% if @in_wizard %>
  <%= render "shared/setup_wizard", :active => "first-homework" %>
<% end %>

<%= simple_form_for @homework, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>

    <% unless @in_wizard %>
      <legend>Create new homework</legend>
    <% end %>
    <%= f.input :title %>
    <%= f.input :message, input_html: {:size => "40x5"} %>
    <%= f.input :deadline , wrapper_html: {class: "date-inputs"} %>
    <%= f.input :should_deliver, hint: "Check if you want your students to be automatically notified of this homework"%>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', homeworks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
