<%= simple_form_for @list, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= @list.name %></legend>

    <div id="students">
      <%= f.simple_fields_for :students do |s| %>
        <%= render "student_fields", :f => s %>
      <% end %>
    </div>
    <p class="links">
      <%= link_to_add_association "<i class='icon-plus-sign'></i> Add Another Email".html_safe, f, :students, :class => "btn" %>
    </p>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <% if @in_wizard %>
        <%= link_to "skip", new_homework_path, :class => 'btn btn-success'%>
      <%end%>
      <%= link_to 'Cancel', list_path(@list), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
