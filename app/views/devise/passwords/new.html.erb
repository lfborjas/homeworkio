<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class=> "horizontal-form" }) do |f| %>
  <fieldset>
    <legend>Forgot your password?</legend>
  <div class="inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
  </div>
  </fieldset>
<% end %>

<%= render "links" %>
